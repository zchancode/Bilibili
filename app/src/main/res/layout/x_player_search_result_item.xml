<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/find_trans_cover_color"
    android:layout_height="250dp">


    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下半年值得"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@id/head_ico" />

    <ImageView
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/head_ico"
        android:layout_marginBottom="8dp"

        android:layout_width="20dp"
        android:background="@drawable/user_head"
        android:layout_height="20dp"/>

    <TextView
        android:textColor="#B3FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/head_ico"
        app:layout_constraintBottom_toBottomOf="@id/head_ico"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toRightOf="@id/head_ico"
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="waken yu"/>

</androidx.constraintlayout.widget.ConstraintLayout>