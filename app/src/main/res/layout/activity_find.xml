<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.mvp.player.view.FindActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/me_topbar_bg"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/findBack"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/find_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Find friends"
            android:textColor="#161718"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/scanBtn"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="13dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/find_scan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <EditText
        android:textSize="15sp"
        android:paddingLeft="44dp"
        android:hint="Search"
        android:background="@drawable/find_search_bg"
        android:id="@+id/search"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />
    
    
    <ImageView
        app:layout_constraintTop_toTopOf="@id/search"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="@id/search"
        app:layout_constraintLeft_toLeftOf="@id/search"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/search_find"/>


    
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/search"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/find_item1"/>

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/search"
        android:layout_marginTop="82dp"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/find_item2"/>

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/search"
        android:layout_marginTop="158dp"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/find_item3"/>


</androidx.constraintlayout.widget.ConstraintLayout>