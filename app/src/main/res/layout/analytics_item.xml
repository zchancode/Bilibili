<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="6.5dp"
    android:paddingRight="6.5dp"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jan"
        android:textColor="#A3A3A3"
        android:textSize="11.3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginBottom="14dp"
        android:id="@+id/dollarBar"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:background="@drawable/analytics_item_shape"
        app:layout_constraintBottom_toTopOf="@+id/itemMonth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDolar" />

    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/itemDolar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#A3A3A3"
        android:text="$1234"
        android:textSize="8.7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>