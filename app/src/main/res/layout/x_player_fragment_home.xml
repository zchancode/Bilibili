<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.playercore.PlayerSurface
        android:id="@+id/player_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following"
            android:textColor="#fff"
            android:textSize="16sp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="11dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For You"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="332dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="37.33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@karennne"
                android:textColor="#fff"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Â· 1-28"
                android:textColor="#99FFFFFF"
                android:textSize="17sp" />
        </LinearLayout>


        <TextView
            android:layout_gravity="bottom"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#avicii #wflove"/>

    </FrameLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="206dp"
        android:layout_height="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="10.33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" >
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/music"/>

        <TextView
            android:layout_marginLeft="9dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Avicii - Waiting For Love (ft. "
            android:textColor="#fff"
            android:textSize="15sp" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12.33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cd" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"

            android:background="@drawable/song_ico" />

    </FrameLayout>

    <View
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="333.33dp"
        android:background="@drawable/user_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <FrameLayout
        android:layout_width="35.5dp"
        android:layout_height="208dp"
        android:layout_marginRight="12.5dp"
        android:layout_marginBottom="91.33dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="54dp"
            android:layout_gravity="top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:src="@drawable/play_love" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4455"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/comment_btn"
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:src="@drawable/comment" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="64"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="52dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:src="@drawable/share" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Share"
                android:textColor="#fff"
                android:textSize="13sp" />

        </LinearLayout>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>