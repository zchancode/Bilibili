<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="17dp"
    android:gravity="center"
    android:layout_height="193dp"
    android:background="@drawable/trending_item_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="168dp"
        android:layout_height="193dp">
        <TextView
            android:id="@+id/trend_title"
            android:text="#petitbac2"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="9dp"/>

        <TextView
            android:id="@+id/trend_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="6,5M"

            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:gravity="center"
            android:background="@drawable/trending_item_hot_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="8dp"
            android:src="@drawable/trending_item_right_narrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginRight="19dp"/>


        <ImageView
            android:background="#fff"
            android:layout_width="55dp"
            android:layout_height="99dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="88dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:background="#fff"
            android:layout_width="43dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="88dp"
            android:layout_marginLeft="68dp"/>


        <ImageView
            android:background="#fff"
            android:layout_width="43dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="139dp"
            android:layout_marginLeft="68dp"/>

        <ImageView
            android:background="#fff"
            android:layout_width="43dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="88dp"
            android:layout_marginLeft="114dp"/>

        <ImageView
            android:background="#fff"
            android:layout_width="43dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="139dp"
            android:layout_marginLeft="114dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>