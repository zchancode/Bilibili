<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.mvp.player.view.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="896dp">

        <FrameLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/toolbarBack"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_gravity="left|top"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/profile_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Edit profile"
                android:textColor="#161722"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#D0D1D3" />

        </FrameLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="79dp"
            android:background="@drawable/profile_video"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:background="@drawable/profile_video_camera"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/profile_head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


        <ImageView
            android:layout_width="27dp"
            android:layout_height="22dp"
            android:background="@drawable/profile_head_camera"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintEnd_toEndOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/imageView9" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Change video"
            android:textColor="#000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_goneMarginTop="13dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Change photo"
            android:textColor="#000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_goneMarginTop="13dp" />


        <com.mvp.player.view.custom.SettingItemView
            android:id="@+id/nameItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="184dp"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:leftText="Name"
            app:rightText="Jacob West" />

        <com.mvp.player.view.custom.SettingItemView
            android:id="@+id/usernameItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="236dp"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:leftText="Username"
            app:rightText="jacob_w" />

        <com.mvp.player.view.custom.SettingItemView
            android:id="@+id/emailItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="288dp"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:leftTextVisible="false"
            app:rightText="tiktok.com@jacob_w" />


        <com.mvp.player.view.custom.SettingItemView
            android:id="@+id/bioItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:leftText="Bio"
            app:rightText="Add a bio to your profile" />

        <View
            android:layout_width="382dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#D0D1D3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bioItem" />


        <com.mvp.player.view.custom.SettingItemView
            android:id="@+id/insItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="408dp"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:leftText="Instagram"
            app:rightText="Add Instagram to your profile" />


        <com.mvp.player.view.custom.SettingItemView
            android:id="@+id/youtubeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="460dp"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:leftText="YouTube"
            app:rightText="Add YouTube to your profile" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>